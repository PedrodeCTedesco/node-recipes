{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES6",
      "moduleResolution": "node", 
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/server", "src/clients/**/*.ts"],
    "exclude": ["node_modules"]
  }
  