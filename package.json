{
  "name": "tcp-server",
  "version": "1.0.0",
  "description": "Servidor para rede que opera sob protocolo TCP.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start:tcp-server": "node dist/server/tcp/server.js",
    "start:udp-server": "node dist/server/udp/server.js",
    "start:tcp-client": "node dist/clients/tcp/tcp.client.js",
    "start:udp-client": "node dist/clients/udp/udp.client.js",
    "dev:tcp-server": "npm run build && npm run start:tcp-server",
    "dev:udp-server": "npm run build && npm run start:udp-server",
    "dev:tcp-client": "npm run build && npm run start:tcp-client",
    "dev:udp-client": "npm run build && npm run start:udp-client",
    "test": "jest"
  },
  "engines": {
    "node": "v20.11.1"
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PedrodeCTedesco/node-recipes.git"
  },
  "keywords": [
    "server",
    "tcp",
    "learning"
  ],
  "author": "Pedro de Castro Tedesco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PedrodeCTedesco/node-recipes/issues"
  },
  "homepage": "https://github.com/PedrodeCTedesco/node-recipes#readme",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/node21": "^21.0.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.3.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
